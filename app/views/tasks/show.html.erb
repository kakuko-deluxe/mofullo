<h1>タスク詳細</h1>
  <p>
  タイトル：<br>
  <%= @task.title %>
  </p>
  <p>
  本文 :<br>
  <%=  form.text_field: @task.discription %>
  </p>
  <p>
  期限: <br>
  <%=  form.integer_field: @task.integer%>
  </p>
  <p>
    <%= link_to "戻る" ,task_path(@task)  %>
    <%= link_to "編集" , edit_task_path(@task) %>
    <%= link_to "削除" , task_path(@task) , method::delete , data:{confirm:'削除して良いのか？'} %>
  </p>